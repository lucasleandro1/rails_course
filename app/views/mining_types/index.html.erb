<p style="color: green"><%= notice %></p>

<h1>Mining types</h1>

<div id="mining_types">
<table>
  <thead>
    <tr>
      <th><%=@mining_types.human_attribute_name(:description)%></th>
      <th><%=@mining_types.human_attribute_name(:acronym)%></th>
    </tr>
  </thead>
  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to "Show", mining_type %></td>
        <td><%= link_to "Edit", edit_mining_type_path(mining_type) %></td>
        <td><%= link_to "delete", mining_type, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
</div>

<%= link_to "New types", new_mining_type_path %>
